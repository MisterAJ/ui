{"code":"import * as React from 'react';\r\nimport { StyledButton } from \"./StyledButton\";\r\nimport { motion } from \"framer-motion\";\r\nimport { Icon } from '..';\r\nimport { useTheme } from \"../../hooks\";\r\nfunction getTypeStyle(type, ghost, theme) {\r\n    switch (type) {\r\n        case 'primary': {\r\n            if (ghost) {\r\n                return theme.buttonPrimaryBackground;\r\n            }\r\n            return theme.buttonPrimaryColor;\r\n        }\r\n        case 'danger': {\r\n            if (ghost) {\r\n                return theme.buttonDangerBackground;\r\n            }\r\n            return theme.buttonDangerColor;\r\n        }\r\n        case 'link': {\r\n            return theme.buttonLinkColor;\r\n        }\r\n    }\r\n}\r\nexport const Button = React.forwardRef((props, ref) => {\r\n    const { children, className, ghost, loading, type, shape, size, ...rest } = props;\r\n    const theme = useTheme();\r\n    return (React.createElement(StyledButton, Object.assign({ ref: ref, buttonType: type, className: `${className} rtk-button`, customProps: {\r\n            loading,\r\n            ghost,\r\n            shape,\r\n            size\r\n        }, theme: theme }, rest),\r\n        loading &&\r\n            React.createElement(React.Fragment, null,\r\n                React.createElement(Icon.Loading, { fill: getTypeStyle(type, ghost, theme) }),\r\n                React.createElement(motion.div, { key: \"loading\", animate: {\r\n                        marginRight: shape === 'circle' ? 0 : 5,\r\n                        transition: { type: 'tween' }\r\n                    }, transition: { type: 'tween', duration: theme.animationTimeVeryFast } })),\r\n        React.createElement(\"span\", null, children)));\r\n});\r\nButton.defaultProps = {\r\n    type: 'primary',\r\n    children: '',\r\n    className: '',\r\n    disabled: false,\r\n    ghost: false,\r\n    loading: false,\r\n    onClick: undefined,\r\n    shape: 'default',\r\n    size: 'defau